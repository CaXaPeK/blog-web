<div class="container">
    <div class="community-container" id="{{id}}"></div>

    <div class="card shadow-sm my-3 d-none" id="filtersForm">
        <div class="card-header">
            Фильтры
        </div>
        <div class='card-body'>
            <form>
                <div class="row">
                    <div class="col-16 col-md-6">
                        <label for="sortFilter" class="form-label">Сортировать</label>
                        <select class="form-select" id="sortFilter">
                            <option selected disabled>—</option>
                            <option value="CreateDesc">По дате создания (сначала новые)</option>
                            <option value="CreateAsc">По дате создания (сначала старые)</option>
                            <option value="LikeDesc">По кол-ву лайков (сначала популярные)</option>
                            <option value="LikeAsc">По кол-ву лайков (сначала непопулярные)</option>
                        </select>
                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="col-16 col-md-6">
                        <label for="tagFilter" class="form-label">Поиск по тегам</label>
                        <select multiple size="3" class="form-control" id="tagFilter">
                        </select>
                        <div class="invalid-feedback"></div>
                    </div>
                </div>

                <div class="row">
                    <div class="col"></div>
                    <div class="col-auto">
                        <button type="button" class="btn btn-primary mt-3" onclick="sendFilters()" id="filterApplyBtn">Применить</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="d-grid justify-content-center" id="notFoundText" style="display: flex;"></div>

    <div id="postContainer"></div>

    <div id="paginationSet"></div>
</div>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="/js/libs/moment.min.js" type="text/javascript"></script>
<script src="/js/globalPostLogic.js"></script>
<script src="/js/community.js"></script>
<script src="/js/globalCommunity.js"></script>
<script src="/js/globalGrammar.js"></script>
<script src="/js/globalPagination.js"></script>