<div class="d-flex container justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow" style="width: 60rem;">
        <div class="card-body">
            <form>
                <div class="row mb-3">
                    <label for="inputEmail" class="col-sm-2 col-form-label">Эл. почта</label>
                    <div class="col-sm-10">
                        <input type="email" class="form-control" id="inputEmail" aria-describedby="emailHelp" placeholder="name@example.com" value="Загрузка..." required>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputName" class="col-sm-2 col-form-label">ФИО</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputName" placeholder="Иванов Иван Иванович" value="Загрузка..." required>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputNumber" class="col-sm-2 col-form-label">Телефон</label>
                    <div class="col-sm-10">
                        <input type="tel" class="form-control" id="inputNumber" placeholder="+7 (xxx) xxx xx-xx" pattern="\+7 ([0-9]{3}) [0-9]{3} [0-9]{2}-[0-9]{2}" value="Загрузка..." required>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputGender" class="col-sm-2 col-form-label">Пол</label>
                    <div class="col-sm-10">
                        <select class="form-control" id="inputGender" value="Загрузка...">
                            <option value="male">Мужчина</option>
                            <option value="female">Женщина</option>
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputDate" class="col-sm-2 col-form-label">Дата рождения</label>
                    <div class="col-sm-10">
                        <input type="date" class="form-control" id="inputDate" placeholder="дд.мм.гггг" value="Загрузка..." required>
                    </div>
                </div>
                <div class="d-grid gap-2 justify-content-end">
                    <button type="button" class="btn btn-primary" id="saveBtn">Сохранить</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/js/profile.js"></script>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
