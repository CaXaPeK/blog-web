<div class="container">
    <div class="d-grid justify-content-center my-3" id="notFoundText" style="display: flex;">
        Загрузка...
    </div>

    <div id="postContainer">
        <div class="post-id-container" id="{{id}}"></div>
    </div>

    <div id="commentElements" class="d-none">
        <div class="card shadow-sm my-3 comments-card">
            <div class="card-body">
                <h5 class="card-title" id="commentsTitle">Комментарии</h5>
                <div id="commentsContainer"></div>
            </div>
        </div>

        <div class="card shadow-sm my-3">
            <div class="card-body">
                <div>
                    <label for="commentText" class="form-label">Оставьте комментарий</label>
                    <textarea class="form-control" id="commentText" onfocusout="validateComment(commentText, commentError);"></textarea>
                    <div class="invalid-feedback" id="commentError"></div>
                </div>
                <div class="row mt-3">
                    <div class="col"></div>
                    <div class="col-auto">
                        <button class="btn btn-primary" onclick="leaveComment(null)">Отправить</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="/js/libs/moment.min.js" type="text/javascript"></script>
<script src="/js/globalValidation.js"></script>
<script src="/js/globalPostLogic.js"></script>
<script src="/js/post.js"></script>