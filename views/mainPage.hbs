<div class="container">
    <div class="d-grid justify-content-end my-3">
        <a type="button" class="btn btn-primary disabled" id="newPostBtn" href="./post/create">Написать пост</a>
    </div>
    <div class="card shadow-sm my-3" id="filtersForm">
        <div class="card-header">
            Фильтры
        </div>
        <div class='card-body'>
            <form>
                <div class="row">
                    <div class="col-16 col-md-6">
                        <label for="authorFilter" class="form-label">Поиск по имени автора</label>
                        <input type="text" class="form-control" id="authorFilter">
                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="col-16 col-md-6">
                        <label for="tagFilter" class="form-label">Поиск по тегам</label>
                        <select multiple size="3" class="form-control" id="tagFilter">
                        </select>
                        <div class="invalid-feedback"></div>
                    </div>
                </div>
                <div class="row mt-3 align-items-end">
                    <div class="col-4">
                        <label for="sortFilter" class="form-label">Сортировать</label>
                        <select class="form-select" id="sortFilter">
                            <option selected disabled>—</option>
                            <option value="CreateDesc">По дате создания (сначала новые)</option>
                            <option value="CreateAsc">По дате создания (сначала старые)</option>
                            <option value="LikeDesc">По кол-ву лайков (сначала популярные)</option>
                            <option value="LikeAsc">По кол-ву лайков (сначала непопулярные)</option>
                        </select>
                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="col-2">
                        <label for="minReadTimeFilter" class="form-label">Время чтения от</label>
                        <input type="number" class="form-control" id="minReadTimeFilter" min="1">
                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="col-2">
                        <label for="maxReadTimeFilter" class="form-label">Время чтения до</label>
                        <input type="number" class="form-control" id="maxReadTimeFilter" min="1">
                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="col">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="myCommunitiesFilter">
                            <label class="form-check-label" for="myCommunitiesFilter">Только мои группы</label>
                        </div>
                    </div>
                    <div class="col-auto">
                        <button type="button" class="btn btn-primary mt-3" onclick="sendFilters()" id="filterApplyBtn">Применить</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="d-grid justify-content-center" id="notFoundText" style="display: flex;">
        Загрузка...
    </div>

    <div id="postContainer"></div>

    <div id="paginationSet"></div>
</div>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="/js/libs/jquery.maskedinput.min.js" type="text/javascript"></script>
<script src="/js/libs/moment.min.js" type="text/javascript"></script>
<script src="/js/globalPostLogic.js"></script>
<script src="/js/mainPage.js"></script>
<script src="/js/globalPagination.js"></script>